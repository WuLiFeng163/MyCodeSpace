/* pages/details/details.wxss */
/* 底部导航 */
.nav{
	width: 100%;
	height: 60px;
	position: fixed;
	bottom: 0;
	left: 0;
	background-color: #fff;
}
.nav .car{
	width: 8%;
	height: 40px;
	padding: 10px 6%;
	float: left;
	/* background-color: pink; */
}
.car image{
	width: 100%;
	height: 25px;
}
.car view{
	width: 100%;
	height: 15px;
	font-size: 8px;
	text-align: center;
}
.nav .btn{
	width: 77%;
	height: 40px;
	padding: 10px 3% 10px 0;
	/* background-color: skyblue; */
	float: left;
}
.nav .btn view:nth-child(1){
	width: 49%;
	height: 38px;
	float: left;
	line-height: 38px;
	text-align: center;
	font-size: 12px;
	border: 1px solid #1F1F1F;
}
.nav .btn navigator view{
	width: 49%;
	height: 38px;
	float: left;
	line-height: 38px;
	text-align: center;
	font-size: 12px;
	background-color: #000000;
	color: #fff;
	border: 1px solid #1F1F1F;
}
/* ----------------- */
.banner{
	width: 100%;
}
.banner view{
	width: 100%;
}
.banner view image{
	width: 100%;
}
/* 轮播图end */


/* 价格样式 */
.goods_ms{
	background-color: #fff;
}
.ms_money{
	width: 90%;
	padding: 0 5%;
	height: 50px;
	line-height: 50px;
}
.ms_money .money{
    font-size: 18px;
	font-weight: bold;
    color:#1F1F1F;
	display: inline-block;
}
.ms_money .old_money{
    font-size: 12px;
    color:#A6A6A6;
	text-decoration: line-through;
	margin-left: 10px;
	display: inline-block;
}
.txt{
	font-size: 16px;
    color:#000;
	width: 90%;
	padding: 0 5%;
}
.txt_ms{
	font-size: 14px;
    color:#000;
	width: 90%;
	height: 40px;
	line-height: 40px;
	padding: 0 5%;
}

