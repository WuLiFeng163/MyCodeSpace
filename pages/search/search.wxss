/* pages/search/search.wxss */
.bb{
	width: 100%;
	padding: 0 10px;
}
.bb::after{
	content: "";
	display: block;
	clear: both;
}
.s{
	height: 40px;
	border-radius: 10px;
	line-height: 40px;
	margin: 0 10px;
	padding: 0 10px;
	/* border: 1px solid #1F1F1F; */
	float: left;
}

.hot_con{
	width: 90%;
	padding: 5px 5%;
}
.hot_con view{
	color: #1F1F1F;
	font-size: 14px;
	height: 30px;
	padding: 5px 10px;
	line-height: 30px;
	border-radius: 20px;
	text-align: center;
	float: left;
	background-color: #F6F6F6;
	margin: 5px 10px;
}
.hot_con view:nth-child(1){
	color: #E986A7;
	background-color: #FFE6EC;
}
.hot_con view:nth-child(2){
	color: #E986A7;
	background-color: #FFE6EC;
}
.hot_con view:nth-child(3){
	color: #E986A7;
	background-color: #FFE6EC;
}




.search {
	width: 92%;
	height: 40px;
	padding: 5px 3% 5px 5%;
}
.search input{
	width: 95%;
	border-radius: 5px;
	padding-left: 5%;
	height: 40px;
	line-height: 50px;
	color: #1F1F1F;
	background-color: #F7F7F7;
}

.hot{
	width: 90%;
	height: 40px;
	line-height: 40px;
	padding: 0 5%;
	color: #1F1F1F;
	font-size: 16px;
	margin: 10px 0;
}