/* pages/local/local.wxss */
page{
	background-color: #f8f8f8;
}


.today{
	width: 100%;
	height: 150px;
	background-color: #ccbfab;	
	box-shadow: 2px 5px 8px #938a7b;
	padding-top: 50px;
	position: relative;
}
.temp{
	width: 100%;
	text-align: center;
	height: 20px;
	line-height: 20px;
	color: #fff;
	font-size: 28px;
}
.weather{
	width: 100%;
	text-align: center;
	height: 20px;
	line-height: 20px;
	color: #fff;
	font-size: 12px;
	padding: 0 10px;
	margin-top: 10px;
}
.reminder{
	width: 100%;
	text-align: center;
	height: 20px;
	line-height: 20px;
	color: #fff;
	font-size: 14px;
	margin-top: 10px;
}
.city{
	color: #fff;
	font-size: 16px;
	position: absolute;
	right: 40px;
	bottom: 30px;
}

/* //定位 */
.address{
	margin-top: 10px;
	width: 100%;
	padding-left: 10px;
	height: 40px;
	line-height: 40px;
	font-size: 14px;
}
.box {
	margin-top: 10px;
	width: 100%;
	padding-left: 10px;
	background-color: #fff;
	height: 50px;
	line-height: 50px;
	font-size: 14px;
	color: #0097ff;
	position: relative;
}
.relocation{
	position: absolute;
	right: 25px;
	bottom: 0px;
	font-size: 14px;
	color: #0097ff;
}

/* //附近地址 */
.box_two {
	margin-top: 10px;
	width: 100%;
	padding-left: 10px;
	background-color: #fff;
	font-size: 14px;
	color: #1F1F1F;
	position: relative;
}
.name{
	width: 100%;
	height: 50px;
	line-height: 50px;
	border-bottom: .5px solid #eee;
}
.name:last-child{
	border-bottom:0;
}