#accessories{
	position: absolute;
	top: 100px;
	left: 0;
	bottom: 0;
	width: 100%;
	display: none;
}
#accessories .accessories_box{
	width: 100%;
	position: relative;
}
#accessories .accessories_box image{
	display: block;
	width: 100%;
}
.accessories_box .open_box{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 999;
}
.accessories_box .open_box navigator{
	width: 33.3%;
	height: 50%;
	float: left;
}
.accessories_box .open_box navigator #open{
	width: 100%;
	height: 100%;
	background-color: pink;
	opacity: 0;
}

