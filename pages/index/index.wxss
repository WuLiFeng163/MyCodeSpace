/* tab一全部产品 */
/* 头部样式搜索 */
#head_bigbox{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	z-index: 3333;
}

.box{
	width: 100%;
	height: 50px;
	background-color: #fff;
}
.box::after{
	content: "";
	display: block;
	clear: both;
}
.head{
	width: 90%;
	height: 50px;
	line-height: 50px;
	float: left;
}
.head .search {
	width: 92%;
	height: 40px;
	padding: 5px 3% 5px 5%;
}
.search input{
	width: 95%;
	border-radius: 5px;
	padding-left: 5%;
	height: 40px;
	line-height: 50px;
	color: #000;
	background-color: #F2F2F2;
}

/* 头部分类样式 */
.fenlei{
	width: 8%;
	height: 40px;
	float: left;
	padding: 5px 1%;
}
.fenlei image{
	width: 100%;
	height: 25px;
	display: block;
}
.fenlei text{
	display: block;
	width: 100%;
	height: 15px;
	color: #000;
	font-size: 10px;
	text-align: center;
}
/* 头部end */

/* 导航 */ 
.navigation{
	width: 100%;
	height: 50px;
	background-color: #fff;
}
.navigation::after{
	content: "";
	display: block;
	clear: both;
}
.navigation view{
	width: 33.3%;
	height: 50px;
	float: left;
	text-align: center;
	line-height: 50px;
	color: #000;
	font-size: 15px;
}
.navigation view:nth-child(1){
	color: #795548;
}
